generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Event {
  id               Int    @id() @default(autoincrement())
  start            Int
  end              Int
  repeatCount      Int
  course           Course @relation(fields: [courseShort_name], references: [short_name])
  group            String
  courseShort_name String
}

model Course {
  short_name String   @id()
  long_name  String
  url        String
  groups     String[]
  events     Event[]
}
